<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:paddingTop="20dp"
        android:id="@+id/card_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:paddingTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:onClick="goBack"
                android:id="@+id/icon_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8dp"
                android:src="@drawable/ic_arrow_back_black_24dp" />

            <ImageView
                android:id="@+id/icon_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:layout_gravity="center_vertical"
                android:paddingRight="8dp"
                android:src="@drawable/heartred" />

            <ImageView
                android:id="@+id/account"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_account_circle_black_24dp" />

            <LinearLayout
                android:id="@+id/txt_ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/account"
                android:layout_toLeftOf="@+id/account"
                android:layout_toStartOf="@+id/account"
                android:orientation="horizontal"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="/s" />


            </LinearLayout>

            <TextView
                android:id="@+id/txt_odijo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_ratings"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:padding="4dp"
                android:paddingStart="8dp"
                android:text="Full Odiji's Names"
                android:textColor="@color/colorPrimaryP"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/txt_level_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_odijo_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="Level"
                android:textColor="@color/colorPrimaryP"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_level_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="8:4:4"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_qualifications_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_level"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="Qualifications"
                android:textColor="@color/colorPrimaryP"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/txt_qualifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_qualifications_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/lorem_ipsum"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_qualifications"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="Course"
                android:textColor="@color/colorPrimaryP"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/txt_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_course_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="Maths,English,Cre"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_recommendations_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_course"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="Recommendations"
                android:textColor="@color/colorPrimaryP"
                android:textSize="18sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txt_recommendations_title">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v4.view.ViewPager

                        android:id="@+id/viewPager"
                        android:clipToPadding="false"
                        android:overScrollMode="never"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="30dp">


                    </android.support.v4.view.ViewPager>

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="top" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="top" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="top" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="top" />
                    </RadioGroup>
                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>