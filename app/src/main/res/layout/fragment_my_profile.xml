<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/card_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout

                android:layout_alignParentTop="true"
                android:onClick="goBack"
                android:id="@+id/layout_back"

                android:layout_width="50dp"
                android:layout_height="70dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/icon_back"

                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout
                >

            <TextView
                android:typeface="monospace"
                android:id="@+id/textTitle"
                android:layout_below="@+id/layout_back"

                android:textAlignment="center"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryP"

                android:text="My Profile"
                android:padding="4dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--<LinearLayout-->
                <!---->
                <!---->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="70dp">-->
                <!--<TextView-->

                    <!--android:layout_centerInParent="true"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:layout_alignParentTop="true"-->
                    <!--android:textAlignment="center"-->
                    <!--android:layout_marginLeft="4dp"-->
                    <!--android:textStyle="bold"-->
                    <!--android:textSize="25sp"-->
                    <!--android:textColor="@color/colorPrimaryP"-->

                    <!--android:text="My Profie"-->
                    <!--android:padding="4dp"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_centerVertical="true"-->

                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->
            <!--</LinearLayout>-->
            <ScrollView
                android:layout_below="@+id/textTitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:layout_width="wrap_content"
                android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="4dp"

                        android:id="@+id/account"
                        android:layout_width="140dp"
                        android:layout_height="140dp"

                        android:src="@drawable/ic_account_circle_black_24dp" />
                  <LinearLayout
                      android:orientation="vertical"
                      android:layout_toEndOf="@+id/account"
                      android:layout_gravity="bottom"
                      android:layout_centerVertical="true"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                      <TextView
                          android:id="@+id/profile_rating_title"
                          android:typeface="monospace"
                          android:textSize="22sp"
                          android:textStyle="bold"


                          android:text="Your Rating"
                          android:textColor="@color/colorPrimaryP"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />
                      <LinearLayout
                          android:orientation="horizontal"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content">
                          <TextView

                              android:id="@+id/profile_rating"
                              android:gravity="bottom"

                              android:textSize="22sp"

                              android:textStyle="bold"


                              android:text="4.5 "
                              android:textColor="@color/colorPrimaryP"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />
                          <TextView





                              android:textStyle="bold"


                              android:text="/s "
                              android:textColor="@color/colorPrimaryP"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />
                      </LinearLayout>

                  </LinearLayout>




                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                      <LinearLayout
                          android:id="@+id/profile_names"
                          android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                          <TextView
                              android:typeface="monospace"
                              android:textAlignment="center"
                              android:layout_marginLeft="4dp"
                              android:textStyle="bold"
                              android:textSize="25sp"
                              android:textColor="@color/colorPrimaryP"

                              android:text="First User Name"
                              android:padding="4dp"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content" />
                          <TextView
                              android:typeface="monospace"
                              android:textAlignment="center"
                              android:layout_marginLeft="4dp"
                              android:textStyle="bold"
                              android:textSize="20sp"
                              android:textColor="@color/colorPrimaryP"

                              android:text="Second User Name"
                              android:padding="4dp"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content" />

                      </LinearLayout>
                    <LinearLayout
                        android:id="@+id/profile_contacts"
                        android:layout_marginTop="12dp"
                        android:layout_below="@+id/profile_names"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button

                            android:textAlignment="viewStart"
                            android:backgroundTint="@android:color/transparent"
                            android:text="0714406984"
                            android:drawableStart="@drawable/ic_phone_iphone_black_24dp"
                            android:background="@drawable/rounded_border_transaparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <Button
                            android:textAlignment="viewStart"
                            android:backgroundTint="@android:color/transparent"
                            android:textAllCaps="false"
                            android:text="erickogi14@gmail.com"
                            android:drawableStart="@drawable/ic_email_black_24dp"
                            android:background="@drawable/rounded_border_transaparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:layout_below="@+id/profile_contacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:textColor="@android:color/white"
                            android:text="Favorites"
                            android:background="@drawable/rounded_border_accent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <Button
                            android:layout_marginTop="4dp"
                            android:textColor="@android:color/white"
                            android:text="Edit Profile"
                            android:background="@drawable/rounded_border_accent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>
            </ScrollView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>