<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDarkP"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<at.grabner.circleprogress.CircleProgressView
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center_horizontal"
    app:cpv_text="Loading"
    app:cpv_textColor="@android:color/white"
    android:id="@+id/circleProgress"

    app:cpv_seekMode="false"



    app:cpv_blockScale="0.9"
    android:layout_width="200dp"
    android:layout_height="200dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="4dp"

                android:id="@+id/account"
                android:layout_width="140dp"
                android:layout_height="140dp"

                android:src="@drawable/ic_account_circle_black_24dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_toEndOf="@+id/account"
                android:layout_gravity="bottom"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_odijo_name"
                    android:typeface="monospace"
                    android:textSize="22sp"
                    android:textStyle="bold"


                    android:text="Full Odijo Name"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_course"
                    android:typeface="monospace"
                    android:textSize="18sp"



                    android:text="Course Name"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:id="@+id/profile_rating"
                        android:gravity="bottom"

                        android:textSize="18sp"




                        android:text="4.5 "
                        android:textColor="@android:color/holo_orange_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView





                        android:textSize="15sp"

                        android:text="/s "
                        android:textColor="@android:color/holo_orange_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginStart="8dp"
                        android:id="@+id/odijo_rate"
                        android:gravity="bottom"

                        android:textSize="18sp"




                        android:text="200 "
                        android:textColor="@android:color/holo_orange_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView





                        android:textSize="15sp"

                        android:text="Per/hr"
                        android:textColor="@android:color/holo_orange_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                          <Button
                              android:id="@+id/btn_call"
                              android:layout_marginTop="8dp"
                              android:backgroundTint="@color/colorPrimaryP"
                              android:background="@drawable/rounded_border_accent"
                              android:text="Call"
                              android:textColor="@android:color/white"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent" />
            </LinearLayout>



        </RelativeLayout>

        <Button
            android:id="@+id/btn_cancel"
            android:onClick="goBack"
            android:backgroundTint="@color/red"
            android:background="@drawable/rounded_border_transaparent"
            android:layout_marginBottom="34dp"
            android:layout_centerHorizontal="true"
            android:text="Cancle Request"
            android:layout_alignParentBottom="true"

            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>